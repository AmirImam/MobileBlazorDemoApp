@inherits ParentComponent
<ContentView>
    <StackLayout>
        <StackLayout HeightRequest="140">
            @*<Image Source="@("DrawerHeader.jpeg")" HeightRequest="140" Aspect="Aspect.AspectFill" />*@
            <WebView Source="@(new HtmlWebViewSource(){Html=HtmlHeader})" HeightRequest="140" HorizontalOptions="LayoutOptions.FillAndExpand" />
        </StackLayout>
        <ScrollView>
            <StackLayout Padding="new Thickness(10)">
                <DrawerButton Icon="@Icons.Home" Text="Home" TPage="Index" />
                <DrawerButton Icon="@Icons.Users" Text="Users" TPage="UsersIndex" />
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentView>

@code{
    string HtmlHeader => 
        $@"<div style='width:100%;height:100%;'>
                <img style='position:absolute;top:0px;left:0px;width:100%;height:100%;' src='file:///android_asset/DrawerHeader.jpeg' />
                <div style='position:absolute;top:10%;left:10%;'>
                    <img style='width:60px;height:60px;border-radius:50%;border: solid 3px {Colors.Primary.ToHex()};margin-left:10px;' src='{Scope.Me.ImageUrl}' />
                    <h3 style='color:white;'>{Scope.Me.Name}</h3>
                </div>     
        </div>";
}